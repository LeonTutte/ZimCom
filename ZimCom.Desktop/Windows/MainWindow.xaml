<Window x:Class="ZimCom.Desktop.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ZimCom.Desktop.ViewModels"
        xmlns:core="clr-namespace:ZimCom.Core.Models;assembly=ZimComCore"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="Main Window"
        MinHeight="1024"
        MinWidth="768"
        Height="1024"
        Width="768"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Margin="4" FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xE71B;" Command="{Binding OpenConnectCommand}" />
                <Button Margin="4" FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xE713;" Command="{Binding OpenSettingsCommand}" />
                <Button Margin="4" FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xE946;" Command="{Binding OpenHelpCommand}" />
                <Separator Visibility="Hidden" Width="50" />
                <Button Margin="4" FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xEC54;" Command="{Binding MuteInputCommand}" />
                <Button Margin="4" FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xE74F;" Command="{Binding MuteOutputCommand}" />
                <Button Margin="4" FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xE769;" Command="{Binding AwayUserCommand}" />
            </StackPanel>
            <TextBlock Grid.Column="1" Margin="10,0,10,0" d:Text="Username"
                       Text="{Binding User.Label}" Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center" HorizontalAlignment="Right" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" d:Background="PowderBlue" Margin="10" MinWidth="250">
                <d:TextBlock Text="Channel View" Style="{StaticResource TitleTextBlockStyle}" />
                <TreeView Margin="10" ItemsSource="{Binding Server.Channels}" AlternationCount="1"
                          SelectedItemChanged="ChannelTree_SelectedItemChanged"
                          MouseDoubleClick="ChannelTree_MouseDoubleClick">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type core:Channel}" ItemsSource="{Binding Participants}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Label}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TitleChannel}" Value="True">
                                                    <Setter Property="FontWeight" Value="ExtraBold" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SpacerChannel}" Value="True">
                                                    <Setter Property="Visibility" Value="Hidden" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            <HierarchicalDataTemplate.Triggers>
                                <DataTrigger Binding="{Binding SpacerChannel}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </HierarchicalDataTemplate.Triggers>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type core:User}">
                                    <TextBlock Text="{Binding Label}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <!--<Setter Property="Foreground" Value="White"/>
                                                <Setter Property="TextDecorations" Value="{x:Null}"/>
                                                <Setter Property="FontStyle" Value="Normal"/>-->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsAway}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HasOthersMuted}" Value="True">
                                                        <Setter Property="FontStyle" Value="Oblique" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </HierarchicalDataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
            <Grid Grid.Column="1" Margin="10" d:Background="CadetBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock d:Text="Channel Header" Text="{Binding CurrentChannel.Label}"
                                   Style="{StaticResource TitleTextBlockStyle}" />
                        <TextBlock d:Text="Channel Description" Text="{Binding CurrentChannel.Description}"
                                   Style="{StaticResource SubtitleTextBlockStyle}" />
                        <ListView ItemsSource="{Binding CurrentChannel.Participants}"
                                  IsEnabled="{Binding ChannelExtrasEnabled}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock d:Text="User" Text="{Binding Label}"
                                               Style="{StaticResource BodyTextBlockStyle}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1" d:Background="AliceBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView Grid.Row="0" ItemsSource="{Binding CurrentChannel.Chat}"
                              d:Background="CornflowerBlue">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type core:ChatMessage}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DateTime}" />
                                    <TextBlock Text=" | " />
                                    <TextBlock Text="{Binding User.Label}" />
                                    <TextBlock Text=":" />
                                    <TextBlock Text=" " />
                                    <TextBlock Text="{Binding Message}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Margin="4" Orientation="Horizontal" Grid.Row="1" d:Background="Aquamarine">
                        <TextBox MinWidth="400" TextWrapping="Wrap" Text="{Binding CurrentChatMessage}"
                                 IsEnabled="{Binding ChatEnabled}">
                        </TextBox>
                        <Button Margin="4,0,0,0" Click="ChatSubmitButton_Click"
                                IsEnabled="{Binding ChatEnabled}">
                            <Button.Content>
                                <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE8BD;" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>