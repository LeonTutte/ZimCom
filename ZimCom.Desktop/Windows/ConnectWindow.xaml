<Window x:Class="ZimCom.Desktop.Windows.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ZimCom.Desktop.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:ConnectWindowViewModel}"
        mc:Ignorable="d"
        Title="Connect"
        Height="164" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" Cursor="">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" d:Background="AliceBlue">
            <TextBox x:Name="AddressBox" Margin="4" AcceptsReturn="False" TextWrapping="NoWrap" Height="32"
                     Text="{Binding Address}" />
        </Grid>
        <Grid Grid.Row="1" d:Background="Aqua">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Margin="4" Content="Connect" Command="{Binding ConnectCommand}"
                        IsDefault="True" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>