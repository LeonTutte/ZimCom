<Window x:Class="ZimCom.Desktop.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ZimCom.Desktop.ViewModels"
        xmlns:coreAudioApi="clr-namespace:NAudio.CoreAudioApi;assembly=NAudio.Wasapi"
        d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
        mc:Ignorable="d"
        Title="ZimCom Settings"
        MinHeight="1024"
        MinWidth="768"
        Height="1024"
        Width="768"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Window.Resources>
        <CompositeCollection x:Key="EmptyCollection" />
    </Window.Resources>
    <Grid Margin="10">
        <VirtualizingStackPanel Orientation="Vertical">
            <Grid d:Background="AliceBlue">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="User Settings" Style="{DynamicResource TitleTextBlockStyle}" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,4" Grid.Column="0" Grid.Row="0" Text="User ID"
                                   Style="{DynamicResource SubTitleTextBlockStyle}" />
                        <TextBlock Margin="0,4" Grid.Column="1" Grid.Row="0" Text="{Binding User.Id}"
                                   Style="{DynamicResource BodyTextBlockStyle}" />
                        <TextBlock Margin="0,4" Grid.Column="0" Grid.Row="1" Text="Username"
                                   Style="{DynamicResource SubTitleTextBlockStyle}" />
                        <TextBox Margin="0,4" Grid.Column="1" Grid.Row="1" Text="{Binding User.Label}" />
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid d:Background="Aqua">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Input Settings" Style="{DynamicResource TitleTextBlockStyle}" />
                    <ListBox Margin="10" Height="100" ItemsSource="{Binding AvailableAudioInputDevices,
                    FallbackValue={StaticResource EmptyCollection}}"
                             SelectedIndex="{Binding SelectedAudioInputIndex}"
                             SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type coreAudioApi:MMDevice}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DeviceFriendlyName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
            <Grid d:Background="Aquamarine">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Output Settings" Style="{DynamicResource TitleTextBlockStyle}" />
                    <ListBox Margin="10" Height="100" ItemsSource="{Binding AvailableAudioOutputDevices,
                    FallbackValue={StaticResource EmptyCollection}}"
                             SelectedIndex="{Binding SelectedAudioOutputIndex}"
                             SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type coreAudioApi:MMDevice}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DeviceFriendlyName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
            <Grid d:Background="Beige" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Margin="4" Content="Save" Command="{Binding SavedSettingsCommand}"
                            IsDefault="True" />
                </StackPanel>
            </Grid>
        </VirtualizingStackPanel>
    </Grid>
</Window>