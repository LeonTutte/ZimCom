<Window x:Class="ZimCom.Desktop.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ZimCom.Desktop.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
        mc:Ignorable="d"
        Title="ZimCom Settings"
        MinHeight="1024"
        MinWidth="768"
        Height="1024"
        Width="768"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <VirtualizingStackPanel Orientation="Vertical">
            <Grid d:Background="AliceBlue">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="User Settings" Style="{DynamicResource TitleTextBlockStyle}" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,4" Grid.Column="0" Grid.Row="0" Text="User ID"
                                   Style="{DynamicResource SubTitleTextBlockStyle}" />
                        <TextBlock Margin="0,4" Grid.Column="1" Grid.Row="0" Text="{Binding User.Id}"
                                   Style="{DynamicResource BodyTextBlockStyle}" />
                        <TextBlock Margin="0,4" Grid.Column="0" Grid.Row="1" Text="Username"
                                   Style="{DynamicResource SubTitleTextBlockStyle}" />
                        <TextBox Margin="0,4" Grid.Column="1" Grid.Row="1" Text="{Binding User.Label}" />
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid d:Background="Aqua">
                <TextBlock Text="Input Settings" Style="{DynamicResource TitleTextBlockStyle}" />
            </Grid>
            <Grid d:Background="Aquamarine">
                <TextBlock Text="Output Settings" Style="{DynamicResource TitleTextBlockStyle}" />
            </Grid>
            <Grid d:Background="Beige" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Margin="4" Content="Save" Command="{Binding SavedSettingsCommand}"
                            IsDefault="True" />
                </StackPanel>
            </Grid>
        </VirtualizingStackPanel>
    </Grid>
</Window>